<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#0f0f0f"
            android:padding="2px"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="#efefef"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_recomstore_1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="#aaababab"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#efefef"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#bfbfbf"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="8dp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#0f0f0f"
            android:padding="2px"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="#efefef"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_recomstore_2"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="#aaababab"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#efefef"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#bfbfbf"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="8dp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#0f0f0f"
            android:padding="2px"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="#efefef"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_recomstore_3"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="#aaababab"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#efefef"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="14dp"
                        android:id="@+id/tv_recomregion1_text" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#bfbfbf"
                        android:text="홍대 대표간식 김밥"
                        android:lines="1"
                        android:textSize="8dp"
                        android:id="@+id/tv_recomregion1_subtext" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>